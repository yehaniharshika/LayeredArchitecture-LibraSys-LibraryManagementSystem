<AnchorPane fx:id="root" prefHeight="750.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.LibraSys.controller.LoginFormController">
   <children>
      <ImageView fitHeight="750.0" fitWidth="1200.0" pickOnBounds="true" preserveRatio="true" />
      <ImageView fitHeight="750.0" fitWidth="1200.0">
         <image>
            <Image url="@../assets/login.jpg" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
      <AnchorPane layoutX="730.0" layoutY="100.0" prefHeight="556.0" prefWidth="395.0" style="-fx-background-color: #f5f6fa;">
         <children>
            <TextField fx:id="txtUserName" layoutX="57.0" layoutY="168.0" prefHeight="42.0" prefWidth="275.0" promptText="User Name" style="-fx-background-color: #1B97B0;">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </TextField>
            <TextField fx:id="txtServiceNumber" layoutX="57.0" layoutY="72.0" prefHeight="42.0" prefWidth="275.0" promptText="Service Number" style="-fx-background-color: #1B97B0;">
