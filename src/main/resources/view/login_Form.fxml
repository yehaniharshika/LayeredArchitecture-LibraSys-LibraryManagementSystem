                  <Font name="System Bold" size="13.0" />
               </font>
            </TextField>
            <TextField fx:id="txtPassword" layoutX="57.0" layoutY="263.0" prefHeight="42.0" prefWidth="275.0" promptText="Password" style="-fx-background-color: #1B97B0;">
